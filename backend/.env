# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=audesp_dev
DATABASE_USER=audesp
DATABASE_PASSWORD=audesp_password_dev
DATABASE_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production_very_long_string_for_security
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_in_production_very_long_string_for_security
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Bcrypt Configuration
BCRYPT_ROUNDS=10

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/audesp.log

# External Services
AUDESP_API_URL=https://api.audesp.gov.br
AUDESP_API_KEY=
AUDESP_API_TIMEOUT=30000

# Features
FEATURE_OCR_ENABLED=true
FEATURE_PDF_IMPORT_ENABLED=true
FEATURE_AUDESP_INTEGRATION_ENABLED=true
FEATURE_EMAIL_NOTIFICATIONS_ENABLED=true
