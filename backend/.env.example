# AUDESP v3.0 Backend - Environment Variables

# ==================== SERVER ====================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# ==================== DATABASE ====================
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=audesp_dev
DATABASE_USER=audesp
DATABASE_PASSWORD=audesp_password_dev
DATABASE_SSL=false

# ==================== REDIS ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==================== JWT ====================
JWT_SECRET=seu_jwt_secret_super_seguro_aqui_minimo_32_caracteres
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=seu_refresh_secret_super_seguro_aqui_minimo_32_caracteres
JWT_REFRESH_EXPIRES_IN=30d

# ==================== ENCRYPTION ====================
BCRYPT_ROUNDS=10

# ==================== CORS ====================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# ==================== RATE LIMITING ====================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================== LOGGING ====================
LOG_LEVEL=debug
LOG_FILE=logs/audesp.log

# ==================== EXTERNAL SERVICES ====================
# AUDESP API
AUDESP_API_URL=https://api.audesp.gov.br
AUDESP_API_KEY=
AUDESP_API_TIMEOUT=30000

# ==================== EMAIL (Futuro) ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@audesp.gov.br

# ==================== STORAGE (Futuro) ====================
STORAGE_TYPE=local
STORAGE_PATH=./uploads
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ==================== MONITORING ====================
SENTRY_DSN=
DATADOG_API_KEY=

# ==================== FEATURES ====================
FEATURE_OCR_ENABLED=true
FEATURE_PDF_IMPORT_ENABLED=true
FEATURE_AUDESP_INTEGRATION_ENABLED=false
FEATURE_EMAIL_NOTIFICATIONS_ENABLED=false
